<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>tasko</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<description></description>
		<display-name>UserController</display-name>
		<servlet-name>UserController</servlet-name>
		<servlet-class>com.tasko.controller.UserController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserController</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>LoginServlet</display-name>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.tasko.controller.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>BoardController</display-name>
		<servlet-name>BoardController</servlet-name>
		<servlet-class>com.tasko.controller.BoardController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BoardController</servlet-name>
		<url-pattern>/board/create</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BoardController</servlet-name>
		<url-pattern>/board/delete</url-pattern>
	</servlet-mapping>

	<servlet>
		<description></description>
		<display-name>PlaygroundController</display-name>
		<servlet-name>PlaygroundController</servlet-name>
		<servlet-class>com.tasko.controller.PlaygroundController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PlaygroundController</servlet-name>
		<url-pattern>/playground/save</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PlaygroundController</servlet-name>
		<url-pattern>/go/to/playground</url-pattern>
	</servlet-mapping>
</web-app>